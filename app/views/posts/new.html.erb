<% if current_user %>
  <h1 class="font-bold text-2xl mb-4">New post</h1>
  <%= render "form", post: @post %>
<% else %>
  <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
    <p>You must sign in or create an account to create a new post.</p>
    <p>
      <%= link_to "Sign up", new_user_path, class: "text-blue-500 underline" %> or
      <%= link_to "Log in", new_session_path, class: "text-blue-500 underline" %>
    </p>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to posts", posts_path %>
</div>

<p class="text-green-500"><%= notice %></p>

<div class="flex justify-between items-center mb-4">
  <h1 class="text-2xl font-bold">Browse Articles</h1>

  <%= link_to "New post", new_post_path, class: "text-white bg-blue-500 rounded py-2 px-4" %>
</div>

<div id="posts" class="flex flex-col gap-y-4">
  <% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
      <div class="rounded-2xl shadow hover:bg-gray-50 transition">
        <%= render post %>
      </div>
    <% end %>
  <% end %>
</div>
